<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/gagbox_width"
    android:layout_height="@dimen/gagbox_width"
    android:orientation="vertical"
    android:padding="@dimen/IndicatorHeight"
		>

	<FrameLayout
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:layout_weight="1">

		<ProgressBar
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:id="@+id/progress"
			android:indeterminate="true"/>

		<ImageView
	        android:layout_width="match_parent"
	        android:layout_height="match_parent"
	        android:id="@+id/gagImage"
	        android:layout_weight="1"
	        android:adjustViewBounds="false"
	        android:scaleType="centerInside"/>
	</FrameLayout>

	<TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="New Text"
        android:id="@+id/gagTitle"
        android:layout_weight="2"
        android:textColor="#fff"
        android:background="@color/WetAsphalt"
        android:padding="@dimen/IndicatorHeight"
        android:textSize="@dimen/gagbox_wordsize"/>
</LinearLayout>
